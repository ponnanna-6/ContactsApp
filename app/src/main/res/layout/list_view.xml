<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gender_list_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        />

    <LinearLayout
        android:id="@+id/name_number_list_view_linear_Layout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_list_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            />
        <TextView
            android:id="@+id/phone_number_list_view"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/city_list_view_linear_layout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/city_ic"

            />
        <TextView
            android:id="@+id/city_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>


</LinearLayout>